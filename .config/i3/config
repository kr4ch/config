# quick switch monitor setuip (Win+Ctrl+)
## 1: Only Laptop Displayd
bindsym $mod+Control+1 exec --no-startup-id xrandr --output eDP-1 --primary --mode 2560x1440 --rotate normal --output DP-2-1 --off --output DP-2-2 --off
## 2: Laptop + 2 external DP High-Res
bindsym $mod+Control+2 exec --no-startup-id xrandr --output eDP-1  --mode 2560x1440 --pos 200x1440 --output DP-2-1 --primary --mode 2560x1440_30.00 --pos 0x0 --rotate normal --output DP-2-2 --mode 2560x1440_30.00 --pos 2560x0 --rotate normal
## 3: Laptop + 1 external DP UltraWide
bindsym $mod+Control+3 exec --no-startup-id xrandr --output DP-2-2 --mode 3840x1600 --primary --output eDP-1 --mode 2560x1440 --pos 3840x160 --output DP-2-1 --off
## 4: (Only 2 external DP High-Res)
bindsym $mod+Control+4 exec --no-startup-id  xrandr --output eDP-1  --off --output DP-2-1 --primary --mode 2560x1440_30.00 --pos 0x0 --rotate normal --output DP-2-2 --mode 2560x1440_30.00 --pos 2560x0 --rotate normal
## 5: Only 1 external DP Ultrawide
bindsym $mod+Control+5 exec --no-startup-id xrandr --output eDP-1 --off --output DP-2-2 --primary --mode 3840x1600 --primary
## 6: Home-Office: Laptop + 1x 1080p HDMI in Laptop (no Dockingstation)
bindsym $mod+Control+6 exec --no-startup-id xrandr --output HDMI-2 --mode 1920x1080 --primary --pos 2560x0 --output eDP-1 --mode 2560x1440 --output DP-2-1 --off
## 7: Home-Office with DockingStation: Laptop + 1x 1080p DisplayPort in Dockingstation
bindsym $mod+Control+7 exec --no-startup-id xrandr --output DP-2-2 --mode 1920x1080 --primary --pos 2560x0 --output eDP-1 --mode 2560x1440 --output DP-2-1 --off
## 8: Home-Office with AOC 34" widescreen: Laptop OFF
bindsym $mod+Control+8 exec --no-startup-id xrandr --output DP-2-2 --mode 3440x1440 --primary --pos 2560x0 --output eDP-1 --off --output DP-2-1 --off

## 9: Mirror Laptop to HDMI1 @1080p (presentation)
bindsym $mod+Control+9 exec --no-startup-id xrandr --output eDP-1 --mode 1920x1080 --output HDMI-2 --mode 1920x1080 --same-as eDP-1



